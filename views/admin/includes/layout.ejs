<%
const isPageLayout = ServiceConfig.isPageLayout === true;
%>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= process.env.APP_NAME || 'Admin' ;%></title>
    <link rel="icon" type="image/x-icon" href="/favicon.png">
    <!-- Style -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!--    <link rel="stylesheet" href="/fw2ezuyzb751/plugins/fontawesome-free/css/all.min.css">-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    <link rel="stylesheet" href="/fw2ezuyzb751/plugins/toastr/toastr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/fw2ezuyzb751/css/adminlte.min.css">
    <link rel="stylesheet" href="/fw2ezuyzb751/css/custom.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/6.6.6/css/flag-icons.min.css">
    <!-- / Style -->
    <!-- Content -->
    <%- style; %>
    <!-- / Content -->

</head>
<body class="hold-transition <%= isPageLayout ? 'login-page' : 'sidebar-mini' ;%>">

<%- include('../components/loader'); -%>

<% if (isPageLayout) { %>

    <!-- Content -->
    <%- content; %>
    <!-- / Content -->

<% } else { %>
    <div class="wrapper">

        <!-- Navbar -->
        <%- include('navbar'); -%>
        <!-- / Navbar -->

        <!-- Sidebar -->
        <%- include('sidebar'); -%>
        <!-- / Sidebar -->

        <!-- Content -->
        <%- content; %>
        <!-- / Content -->

        <!-- Footer -->
        <%- include('footer'); -%>
        <!-- / Footer -->

        <!-- Control Sidebar -->
        <!--<aside class="control-sidebar control-sidebar-dark"></aside>-->
        <!-- / Control Sidebar -->
    </div>
<% } %>


<!-- Component -->
<%- include('../components/data-table/table'); -%>
<%- include('../components/image-show.ejs'); -%>
<!-- / Component -->

<!-- Modal -->
<%- include('../components/modal/delete-confirm'); -%>
<!-- / Modal -->

<!-- Hidden view data -->
<div id="viewData" class="d-none"><%= typeof viewData !== 'undefined' ? JSON.stringify(viewData) : '' ;%></div>
<!-- / Hidden view data -->

<!-- Scripts -->
<script src="/fw2ezuyzb751/plugins/jquery/jquery.min.js"></script>
<script src="/fw2ezuyzb751/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/fw2ezuyzb751/js/adminlte.min.js"></script>
<script src="/fw2ezuyzb751/plugins/bootstrap-switch/js/bootstrap-switch.min.js"></script>
<script src="/fw2ezuyzb751/plugins/toastr/toastr.min.js"></script>

<!-- / Scripts -->


<!-- Custom Js -->
<script src="/fw2ezuyzb751/custom.js"></script>
<script src="/fw2ezuyzb751/table-cell-components.js"></script>
<script src="/fw2ezuyzb751/root.js"></script>
<!-- / Custom Js -->


<!-- Content -->
<%- script; %>
<!-- / Content -->

<script>

    $(document).ready(function () {
        $('.pageLoaderLoadPage').hide();
        $('.no-permission-block').remove();
    });

    // Copy Text {
    $(document).on('click', '.copyTextData', function () {
        let temp = $("<input>");
        $('body').append(temp);
        const copiedText = ($(this).attr('data-copy-text') || $(this).text() || '').toString().trim();
        temp.val(copiedText).select();
        document.execCommand('copy');
        toastr.success('Copy');
        temp.remove();
    })
    // } Copy Text



</script>


<!-- Flash Messages -->
<% if (FlashMessages) { %>
    <% FlashMessages.forEach(m=>{ %>
        <% if (m.error) { %>
            <script>toastr.error(`<%= m.error; %>`);</script>
        <% } %>
        <% if (m.success) { %>
            <script>toastr.success(`<%= m.success; %>`);</script>
        <% } %>
    <% }); %>
<% } %>
<!-- / Flash Messages -->

</body>
</html>
